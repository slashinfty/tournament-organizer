  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slashinfty/tournament-organizer/issues"
  },
  "homepage": "https://slashinfty.github.io/tournament-organizer/",
  "dependencies": {
    "tournament-pairings": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/randomstring": "^1.3.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-merge-modules": "^7.0.0",
    "typescript": "^5.9.3"
  }
}
