{
  "name": "tournament-organizer",
  "version": "3.5.1",
  "description": "JavaScript library for running tournaments",
  "exports": {
    ".": {
      "browser": "./dist/index.module.js",
      "umd": "./dist/index.umd.js",
      "import": "./dist/index.js"
    },
    "./dist/*": {
      "browser": "./dist/*",
      "umd": "./dist/*",
      "import": "./dist/*"
    },
    "./interfaces": {
      "browser": "./dist/interfaces/*",
      "umd": "./dist/interfaces/*",
      "import": "./dist/interfaces/*"
    }
  },
  "types": "./dist/index.d.js",
  "type": "module",
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "postinstall" : "npm run build",
    "build": "rm -rf dist/* && tsc -p tsconfig.json && rollup --config rollup.es.config.ts --configPlugin typescript && rollup --config rollup.umd.config.ts --configPlugin typescript",
    "docs": "typedoc --options typedoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slashinfty/tournament-organizer.git"
  },
  "keywords": [
    "tournament",
    "pairings",
    "scorekeeping",
    "swiss",
    "round robin",
    "single elimination",
    "double elimination"
  ],
  "author": "Matt Braddock",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slashinfty/tournament-organizer/issues"
  },
  "homepage": "https://slashinfty.github.io/tournament-organizer/",
  "dependencies": {
    "randomstring": "^1.3.0",
    "tournament-pairings": "^1.5.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/randomstring": "^1.3.0",
    "rollup": "^4.17.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.13",
    "typedoc-plugin-merge-modules": "^5.1.0",
    "typescript": "^5.4.5"
  }
}
